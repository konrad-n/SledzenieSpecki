<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SledzSpecke.App.Views.MultipleSpecialization.SpecializationSwitcherPage"
             Title="Moje specjalizacje">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <Label Text="Zarządzaj specjalizacjami" Style="{StaticResource HeaderLabel}" />

        <CollectionView Grid.Row="1">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="Nie masz jeszcze żadnych specjalizacji" 
                           Style="{StaticResource SubHeaderLabel}" 
                           HorizontalOptions="Center"/>
                    <Label Text="Dodaj swoją pierwszą specjalizację za pomocą przycisku poniżej" 
                           Style="{StaticResource BodyLabel}" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <Button Grid.Row="2" Text="+ Dodaj specjalizację" 
                Style="{StaticResource PrimaryButton}"/>
    </Grid>
</ContentPage>
    