<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.MultipleSpecialization"
             x:Class="SledzSpecke.App.Views.MultipleSpecialization.SpecializationSwitcherPage"
             x:DataType="viewmodels:SpecializationSwitcherViewModel"
             Title="Moje specjalizacje">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <Label Text="Zarządzaj specjalizacjami" Style="{StaticResource HeaderLabel}" />
        
        <CollectionView Grid.Row="1" ItemsSource="{Binding UserSpecializations}">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="Nie masz jeszcze żadnych specjalizacji" 
                           Style="{StaticResource SubHeaderLabel}" 
                           HorizontalOptions="Center"/>
                    <Label Text="Dodaj swoją pierwszą specjalizację za pomocą przycisku poniżej" 
                           Style="{StaticResource BodyLabel}" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" 
                                   Style="{StaticResource SubHeaderLabel}"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding Status}" 
                                   Style="{StaticResource BodyLabel}"/>
                            
                            <Label Grid.Row="2" Grid.Column="0" 
                                   Text="{Binding Progress, StringFormat='Postęp: {0:P0}'}" 
                                   Style="{StaticResource BodyLabel}"/>
                            
                            <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" 
                                    Text="Przełącz" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SpecializationSwitcherViewModel}}, Path=SwitchSpecializationCommand}" 
                                    CommandParameter="{Binding Id}" 
                                    Style="{StaticResource PrimaryButton}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Button Grid.Row="2" Text="+ Dodaj specjalizację" 
                Command="{Binding AddSpecializationCommand}" 
                Style="{StaticResource PrimaryButton}"/>
    </Grid>
</ContentPage>
