<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Procedures"
             x:Class="SledzSpecke.App.Views.Procedures.ProceduresPage"
             x:DataType="viewmodels:ProceduresViewModel"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,Auto,*" 
          Padding="20"
          RowSpacing="20">
        <Border Grid.Row="0"
                Style="{StaticResource CardBorder}">
            <VerticalStackLayout Spacing="15">
                <Label Text="Ogólny postęp procedur" 
                       Style="{StaticResource SubHeaderLabel}"/>
                <ProgressBar Progress="{Binding CompletionPercentage}" 
                             Style="{StaticResource ProgressBar}"/>
                <Label Text="{Binding OverallCompletionDisplay}"
                       Style="{StaticResource BodyLabel}"
                       HorizontalOptions="Center"/>
                <Label Text="{Binding ProceduresCompletedDisplay}"
                       Style="{StaticResource BodyLabel}"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Border>
        <Grid Grid.Row="1" ColumnDefinitions="*,*,Auto" ColumnSpacing="10">
            <Picker Grid.Column="0"
                    Title="Filtruj kategorię"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}" />
            <Picker Grid.Column="1"
                    Title="Filtruj etap"
                    ItemsSource="{Binding Stages}"
                    SelectedItem="{Binding SelectedStage}" />
            <Button Grid.Column="2"
                    Text="+ Dodaj"
                    Command="{Binding AddProcedureCommand}"
                    Style="{StaticResource PrimaryButton}"/>
        </Grid>
        <RefreshView Grid.Row="2"
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <CollectionView Style="{StaticResource ListCollectionView}"
                            ItemsSource="{Binding Procedures}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Spacing="10">
                        <Label Text="Brak procedur"
                               Style="{StaticResource SubHeaderLabel}"
                               HorizontalOptions="Center"/>
                        <Label Text="Dodaj swoją pierwszą procedurę"
                               Style="{StaticResource BodyLabel}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorder}"
                                Margin="0,0,0,10">
                            <Grid RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="*,Auto"
                                  RowSpacing="5">
                                <Label Grid.Row="0"
                                       Grid.Column="0"
                                       Text="{Binding Name}"
                                       Style="{StaticResource SubHeaderLabel}"/>
                                <Label Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding Type}"
                                       Style="{StaticResource BodyLabel}"/>
                                <Label Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding ExecutionDate, StringFormat='{0:d}'}"
                                       Style="{StaticResource BodyLabel}"/>
                                <Label Grid.Row="2" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding Location}"
                                       Style="{StaticResource BodyLabel}" />
                                <Label Grid.Row="3" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding Category}"
                                       Style="{StaticResource BodyLabel}"
                                       IsVisible="{Binding Category, Converter={StaticResource StringNotEmptyConverter}}"/>
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProceduresViewModel}}, Path=ViewProcedureCommand}"
                                    CommandParameter="{Binding Id}" />
                            </Border.GestureRecognizers>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>