<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Procedures"
             x:Class="SledzSpecke.App.Views.Procedures.ProceduresPage"
             x:DataType="viewmodels:ProceduresViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*" 
          Padding="20"
          RowSpacing="20">

        <!-- Przycisk szybkiego dodawania -->
        <Button Grid.Row="0"
                Text="+ Dodaj procedurę"
                Command="{Binding AddProcedureCommand}"
                Style="{StaticResource PrimaryButton}"/>

        <!-- Lista procedur -->
        <RefreshView Grid.Row="1"
                    Command="{Binding RefreshCommand}"
                    IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Procedures}"
                          SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center">
                        <Label Text="Brak procedur"
                               Style="{StaticResource SubHeaderLabel}"/>
                        <Label Text="Dodaj swoją pierwszą procedurę"
                               Style="{StaticResource BodyLabel}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="{StaticResource Surface}"
                                Stroke="{StaticResource Gray300}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10,10,10,10"
                                Margin="0,0,0,10"
                                Padding="15">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0"
                                                   Spacing="5">
                                    <Label Text="{Binding Name}"
                                           Style="{StaticResource SubHeaderLabel}"/>
                                    <Label Text="{Binding Date, StringFormat='{0:d}'}"
                                           Style="{StaticResource BodyLabel}"/>
                                </VerticalStackLayout>

                                <Label Grid.Column="1"
                                       Text="{Binding Status}"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>