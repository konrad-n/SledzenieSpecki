<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Procedures"
             x:Class="SledzSpecke.App.Views.Procedures.ProceduresPage"
             x:DataType="viewmodels:ProceduresViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,*" 
          Padding="20"
          RowSpacing="20">

        <!-- Podsumowanie -->
        <Border Grid.Row="0"
                Style="{StaticResource CardBorder}">
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="20">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Wykonane"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <Label Text="15/30"
                           Style="{StaticResource ValueLabel}"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Pozostało"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <Label Text="15"
                           Style="{StaticResource ValueLabel}"/>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Przycisk dodawania -->
        <Button Grid.Row="1"
                Text="+ Dodaj procedurę"
                Command="{Binding AddProcedureCommand}"
                Style="{StaticResource PrimaryButton}"/>

        <!-- Lista procedur -->
        <RefreshView Grid.Row="2"
                    Command="{Binding RefreshCommand}"
                    IsRefreshing="{Binding IsRefreshing}">
            <CollectionView Style="{StaticResource ListCollectionView}"
                          ItemsSource="{Binding Procedures}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="10">
                        <Label Text="Brak procedur"
                               Style="{StaticResource SubHeaderLabel}"
                               HorizontalOptions="Center"/>
                        <Label Text="Dodaj swoją pierwszą procedurę"
                               Style="{StaticResource BodyLabel}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorder}"
                                Margin="0,0,0,10">
                            <Grid RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="*,Auto"
                                  RowSpacing="5">
                                <Label Grid.Row="0"
                                       Grid.Column="0"
                                       Text="{Binding Name}"
                                       Style="{StaticResource SubHeaderLabel}"/>

                                <Label Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding Type}"
                                       Style="{StaticResource BodyLabel}"/>

                                <Label Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding Date, StringFormat='{0:d}'}"
                                       Style="{StaticResource BodyLabel}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>