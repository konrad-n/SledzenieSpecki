<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Procedures"
             x:Class="SledzSpecke.App.Views.Procedures.ProcedureEditPage"
             x:DataType="viewmodels:ProcedureEditViewModel"
             Title="Edytuj procedurę">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <VerticalStackLayout Spacing="5">
                <Label Text="Nazwa procedury *"
                       Style="{StaticResource SubHeaderLabel}"/>
                <Entry Text="{Binding Name}"
                       Style="{StaticResource BorderedEntry}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="5">
                <Label Text="Data wykonania *"
                       Style="{StaticResource SubHeaderLabel}"/>
                <DatePicker Date="{Binding ExecutionDate}"
                           Format="d"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="5">
                <Label Text="Typ wykonania *"
                       Style="{StaticResource SubHeaderLabel}"/>
                <HorizontalStackLayout Spacing="10">
                    <CheckBox IsChecked="{Binding IsSelfPerformed}"/>
                    <Label Text="Wykonanie samodzielne"
                           Style="{StaticResource BodyLabel}"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="5">
                <Label Text="Miejsce wykonania *"
                       Style="{StaticResource SubHeaderLabel}"/>
                <Entry Text="{Binding Location}"
                       Style="{StaticResource BorderedEntry}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="5">
                <Label Text="Kategoria procedury"
                       Style="{StaticResource SubHeaderLabel}"/>
                <Picker ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}"
                        Title="Wybierz kategorię"
                        Style="{StaticResource BorderedEntry}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="5">
                <Label Text="Etap specjalizacji"
                       Style="{StaticResource SubHeaderLabel}"/>
                <Picker ItemsSource="{Binding Stages}"
                        SelectedItem="{Binding SelectedStage}"
                        Title="Wybierz etap"
                        Style="{StaticResource BorderedEntry}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="5">
                <Label Text="Opiekun"
                       Style="{StaticResource SubHeaderLabel}"/>
                <Entry Text="{Binding SupervisorName}"
                       Placeholder="Imię i nazwisko opiekuna (opcjonalnie)"
                       Style="{StaticResource BorderedEntry}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="5">
                <Label Text="Notatki"
                       Style="{StaticResource SubHeaderLabel}"/>
                <Editor Text="{Binding Notes}"
                        HeightRequest="100"
                        Style="{StaticResource BorderedEntry}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="10" 
                               Margin="0,20,0,0">
                <Button Text="Zapisz zmiany"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding CanSave}"
                        Style="{StaticResource PrimaryButton}"/>
                <Button Text="Usuń procedurę"
                        Command="{Binding DeleteCommand}"
                        Style="{StaticResource SecondaryButton}"
                        BackgroundColor="{StaticResource Danger}"/>
                <Button Text="Anuluj"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButton}"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
 