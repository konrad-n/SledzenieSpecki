<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="SledzSpecke.App.Views.ProcedureEntryPage"
          Title="Dodaj wykonanie procedury">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="{Binding ProcedureName}" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,10"/>

            <Frame BorderColor="#e4f0f5" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding ProcedureType}" FontAttributes="Bold"/>
                    <Label Text="{Binding CompletionStatus}"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Data wykonania" FontAttributes="Bold"/>
            <DatePicker x:Name="DatePicker" Date="{Binding EntryDate}"/>

            <Label Text="Identyfikator pacjenta" FontAttributes="Bold"/>
            <Entry x:Name="PatientIdEntry" Placeholder="Wprowadź identyfikator pacjenta" Text="{Binding PatientId}"/>

            <Label Text="Płeć pacjenta" FontAttributes="Bold"/>
            <Picker x:Name="PatientGenderPicker" Title="Wybierz płeć pacjenta" SelectedItem="{Binding PatientGender}">
                <Picker.Items>
                    <x:String>Mężczyzna</x:String>
                    <x:String>Kobieta</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Miejsce wykonania" FontAttributes="Bold"/>
            <Entry x:Name="LocationEntry" Placeholder="Wprowadź miejsce wykonania" Text="{Binding Location}"/>

            <Label Text="Nadzorujący" FontAttributes="Bold"/>
            <Entry x:Name="SupervisorNameEntry" Placeholder="Wprowadź imię i nazwisko nadzorującego" Text="{Binding SupervisorName}"/>

            <Label Text="Dane osoby wykonującej I asystę" FontAttributes="Bold"/>
            <Entry x:Name="FirstAssistantEntry" Placeholder="Wprowadź dane osoby wykonującej I asystę" Text="{Binding FirstAssistantData}"/>

            <Label Text="Dane osoby wykonującej II asystę" FontAttributes="Bold"/>
            <Entry x:Name="SecondAssistantEntry" Placeholder="Wprowadź dane osoby wykonującej II asystę" Text="{Binding SecondAssistantData}"/>

            <Label Text="Procedura z grupy" FontAttributes="Bold"/>
            <Entry x:Name="ProcedureGroupEntry" Placeholder="Wprowadź procedurę z grupy" Text="{Binding ProcedureGroup}"/>

            <Label Text="Notatki" FontAttributes="Bold"/>
            <Editor x:Name="NotesEditor" Placeholder="Wprowadź dodatkowe informacje" HeightRequest="100" Text="{Binding Notes}"/>

            <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="Anuluj" Clicked="OnCancelClicked" WidthRequest="120" BackgroundColor="#547E9E"/>
                <Button Text="Zapisz" Clicked="OnSaveClicked" WidthRequest="120" BackgroundColor="#082044" TextColor="White"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>