<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Reports"
             x:Class="SledzSpecke.App.Views.Reports.ReportsPage"
             x:DataType="viewmodels:ReportsViewModel"
             Title="Raporty">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Border Style="{StaticResource CardBorder}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Wybierz typ raportu:"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <Picker ItemsSource="{Binding ReportTypes}"
                            SelectedItem="{Binding SelectedReportType}"
                            Title="Wybierz typ raportu"/>

                    <!-- Filtry raportów -->
                    <Grid IsVisible="{Binding ShowDateFilter}" 
                          RowDefinitions="Auto,Auto" 
                          ColumnDefinitions="*,*" 
                          RowSpacing="10" 
                          ColumnSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Od:" 
                               Style="{StaticResource BodyLabel}"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" 
                                   Date="{Binding StartDate}"/>
                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="Do:" 
                               Style="{StaticResource BodyLabel}"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" 
                                   Date="{Binding EndDate}"/>
                    </Grid>

                    <Button Text="Generuj raport"
                            Command="{Binding GenerateReportCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Wyniki raportu -->
            <Border Style="{StaticResource CardBorder}" 
                    IsVisible="{Binding ReportGenerated}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="{Binding ReportTitle}"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <Label Text="{Binding ReportContent}"
                           Style="{StaticResource BodyLabel}"/>
                    <VerticalStackLayout Spacing="10">
                        <Button Text="Eksportuj do PDF"
                                Command="{Binding ExportToPdfCommand}"
                                Style="{StaticResource SecondaryButton}"/>
                        <Button Text="Udostępnij"
                                Command="{Binding ShareReportCommand}"
                                Style="{StaticResource SecondaryButton}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>