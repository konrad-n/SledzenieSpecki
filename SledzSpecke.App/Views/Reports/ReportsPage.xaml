<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Reports"
             x:Class="SledzSpecke.App.Views.Reports.ReportsPage"
             x:DataType="viewmodels:ReportsViewModel"
             Title="Eksport danych">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Border Style="{StaticResource CardBorder}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Wybierz zakres danych do eksportu:"
                           Style="{StaticResource SubHeaderLabel}"/>

                    <Picker ItemsSource="{Binding ExportTypes}"
                            SelectedItem="{Binding SelectedExportType}"
                            Title="Wybierz typ danych"/>

                    <!-- Filtry eksportu -->
                    <Grid RowDefinitions="Auto,Auto"
                          ColumnDefinitions="*,*"
                          RowSpacing="10"
                          ColumnSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Od:"
                               Style="{StaticResource BodyLabel}"/>
                        <DatePicker Grid.Row="0" Grid.Column="1"
                                   Date="{Binding StartDate}"/>
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="Do:"
                               Style="{StaticResource BodyLabel}"/>
                        <DatePicker Grid.Row="1" Grid.Column="1"
                                   Date="{Binding EndDate}"/>
                    </Grid>

                    <Button Text="Eksportuj do Excel"
                            Command="{Binding ExportToExcelCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Podgląd danych -->
            <Border Style="{StaticResource CardBorder}"
                    IsVisible="{Binding DataPreviewAvailable}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Podgląd danych do eksportu"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <Label Text="{Binding PreviewSummary}"
                           Style="{StaticResource BodyLabel}"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
    