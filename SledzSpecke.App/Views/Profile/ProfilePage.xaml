<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Profile"
             x:Class="SledzSpecke.App.Views.Profile.ProfilePage"
             x:DataType="viewmodels:ProfileViewModel"
             Title="Profil">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Border Style="{StaticResource CardBorder}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding UserName}"
                           Style="{StaticResource HeaderLabel}"/>
                    <Label Text="{Binding Specialization}"
                           Style="{StaticResource SubHeaderLabel}"/>
                </VerticalStackLayout>
            </Border>
            <Border Style="{StaticResource CardBorder}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="PostÄ™p specjalizacji"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <ProgressBar Progress="{Binding Progress}"
                                Style="{StaticResource ProgressBar}"/>
                    <Label Text="{Binding ProgressText}"
                           Style="{StaticResource BodyLabel}"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding TimeLeft}"
                           Style="{StaticResource BodyLabel}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>
            <VerticalStackLayout Spacing="10">
                <Button Text="Edytuj profil"
                        Command="{Binding EditProfileCommand}"
                        Style="{StaticResource PrimaryButton}"/>
                <Button Text="Ustawienia"
                        Command="{Binding OpenSettingsCommand}"
                        Style="{StaticResource SecondaryButton}"/>
                <Button Text="Eksportuj dane"
                        Command="{Binding ExportDataCommand}"
                        Style="{StaticResource SecondaryButton}"/>
                <Button Text="Importuj dane"
                        Command="{Binding ImportDataCommand}"
                        Style="{StaticResource SecondaryButton}"/>
                <Button Text="Wyloguj"
                        Command="{Binding LogoutCommand}"
                        Style="{StaticResource SecondaryButton}"
                        BackgroundColor="{StaticResource Danger}"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>