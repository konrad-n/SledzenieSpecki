<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Profile"
             x:Class="SledzSpecke.App.Views.Profile.SettingsPage"
             x:DataType="viewmodels:SettingsViewModel"
             Title="Ustawienia">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Border Style="{StaticResource CardBorder}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Powiadomienia"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Nowe kursy"
                               Style="{StaticResource BodyLabel}"/>
                        <Switch IsToggled="{Binding NotifyCourses}"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Zbliżające się dyżury"
                               Style="{StaticResource BodyLabel}"/>
                        <Switch IsToggled="{Binding NotifyDuties}"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Przypomnienia o procedurach"
                               Style="{StaticResource BodyLabel}"/>
                        <Switch IsToggled="{Binding NotifyProcedures}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            <Border Style="{StaticResource CardBorder}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Dane aplikacji"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <Button Text="Wykonaj kopię zapasową"
                            Command="{Binding BackupCommand}"
                            Style="{StaticResource SecondaryButton}"/>
                    <Button Text="Przywróć z kopii"
                            Command="{Binding RestoreCommand}"
                            Style="{StaticResource SecondaryButton}"/>
                    <Button Text="Wyczyść dane"
                            Command="{Binding ClearDataCommand}"
                            Style="{StaticResource SecondaryButton}"
                            BackgroundColor="{StaticResource Danger}"/>
                </VerticalStackLayout>
            </Border>
            <Border Style="{StaticResource CardBorder}">
                <VerticalStackLayout Spacing="5">
                    <Label Text="O aplikacji"
                           Style="{StaticResource SubHeaderLabel}"/>
                    <Label Text="{Binding VersionInfo}"
                           Style="{StaticResource BodyLabel}"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>