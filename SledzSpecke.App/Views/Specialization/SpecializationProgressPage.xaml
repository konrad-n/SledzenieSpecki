<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Specializations"
             x:Class="SledzSpecke.App.Views.Specialization.SpecializationProgressPage"
             x:DataType="viewmodels:SpecializationProgressViewModel"
             Title="{Binding Title}">

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Nagłówek specjalizacji -->
                <Border Style="{StaticResource CardBorder}">
                    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                        <Label Text="{Binding SpecializationName}" 
                               Style="{StaticResource HeaderLabel}"/>
                        
                        <StackLayout Grid.Row="1" Orientation="Horizontal">
                            <Label Text="Całkowity postęp: " 
                                   Style="{StaticResource BodyLabel}"/>
                            <Label Text="{Binding TotalProgressText}" 
                                   Style="{StaticResource BodyLabel}"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"/>
                        </StackLayout>
                        
                        <ProgressBar Grid.Row="2"
                                     Progress="{Binding TotalProgress}"
                                     Style="{StaticResource ProgressBar}"/>
                    </Grid>
                </Border>
                
                <!-- Skrócony widok sekcji -->
                <Border Style="{StaticResource CardBorder}" IsVisible="{Binding IsDetailedViewVisible, Converter={StaticResource InvertedBoolConverter}}">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Podsumowanie wymagań" 
                               Style="{StaticResource SubHeaderLabel}"/>
                        
                        <!-- Procedury -->
                        <Border Style="{StaticResource CardBorder}">
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="5" ColumnSpacing="10">
                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="Procedury" 
                                       Style="{StaticResource SubHeaderLabel}"/>
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding ProceduresProgressText}" 
                                       Style="{StaticResource ValueLabel}"/>
                                <ProgressBar Grid.Row="1" Grid.ColumnSpan="2"
                                             Progress="{Binding ProceduresProgress}"
                                             Style="{StaticResource ProgressBar}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Dyżury -->
                        <Border Style="{StaticResource CardBorder}">
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="5" ColumnSpacing="10">
                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="Dyżury" 
                                       Style="{StaticResource SubHeaderLabel}"/>
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding DutiesProgressText}" 
                                       Style="{StaticResource ValueLabel}"/>
                                <ProgressBar Grid.Row="1" Grid.ColumnSpan="2"
                                             Progress="{Binding DutiesProgress}"
                                             Style="{StaticResource ProgressBar}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Kursy -->
                        <Border Style="{StaticResource CardBorder}">
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="5" ColumnSpacing="10">
                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="Kursy" 
                                       Style="{StaticResource SubHeaderLabel}"/>
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding CoursesProgressText}" 
                                       Style="{StaticResource ValueLabel}"/>
                                <ProgressBar Grid.Row="1" Grid.ColumnSpan="2"
                                             Progress="{Binding CoursesProgress}"
                                             Style="{StaticResource ProgressBar}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Staże -->
                        <Border Style="{StaticResource CardBorder}">
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="5" ColumnSpacing="10">
                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="Staże" 
                                       Style="{StaticResource SubHeaderLabel}"/>
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding InternshipsProgressText}" 
                                       Style="{StaticResource ValueLabel}"/>
                                <ProgressBar Grid.Row="1" Grid.ColumnSpan="2"
                                             Progress="{Binding InternshipsProgress}"
                                             Style="{StaticResource ProgressBar}"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Przyciski przełączania widoku -->
				<Grid ColumnDefinitions="*" ColumnSpacing="10">
					<Button Grid.Column="0" 
							Text="Widok szczegółowy" 
							Command="{Binding ShowDetailedViewCommand}"
							Style="{StaticResource PrimaryButton}"
							IsVisible="{Binding IsDetailedViewVisible, Converter={StaticResource InvertedBoolConverter}}"/>
					
					<Button Grid.Column="0" 
							Text="Widok ogólny" 
							Command="{Binding ShowSummaryViewCommand}"
							Style="{StaticResource PrimaryButton}"
							IsVisible="{Binding IsDetailedViewVisible}"/>
				</Grid>
                
                <!-- Szczegółowy widok sekcji -->
                <Border Style="{StaticResource CardBorder}" IsVisible="{Binding IsDetailedViewVisible}">
                    <VerticalStackLayout Spacing="20">
                        <!-- Zakładki do przełączania kategorii -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <Button Text="Procedury" 
                                    Command="{Binding SwitchTabCommand}" 
                                    CommandParameter="Procedures"
                                    Style="{StaticResource SecondaryButton}"
                                    BackgroundColor="{Binding IsProceduresTabActive, Converter={StaticResource BoolToColorConverter}}"/>
                            
                            <Button Text="Dyżury" 
                                    Command="{Binding SwitchTabCommand}" 
                                    CommandParameter="Duties"
                                    Style="{StaticResource SecondaryButton}"
                                    BackgroundColor="{Binding IsDutiesTabActive, Converter={StaticResource BoolToColorConverter}}"/>
                            
                            <Button Text="Kursy" 
                                    Command="{Binding SwitchTabCommand}" 
                                    CommandParameter="Courses"
                                    Style="{StaticResource SecondaryButton}"
                                    BackgroundColor="{Binding IsCoursesTabActive, Converter={StaticResource BoolToColorConverter}}"/>
                            
                            <Button Text="Staże" 
                                    Command="{Binding SwitchTabCommand}" 
                                    CommandParameter="Internships"
                                    Style="{StaticResource SecondaryButton}"
                                    BackgroundColor="{Binding IsInternshipsTabActive, Converter={StaticResource BoolToColorConverter}}"/>
                        </HorizontalStackLayout>
                        
                        <!-- Filtrowanie -->
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10" IsVisible="{Binding HasFilters}">
                            <Picker Grid.Column="0" 
                                    ItemsSource="{Binding FilterOptions}" 
                                    SelectedItem="{Binding SelectedFilter}"
                                    Title="Filtruj"/>
                            
                            <Button Grid.Column="1" 
                                    Text="Wyczyść" 
                                    Command="{Binding ClearFilterCommand}"
                                    Style="{StaticResource SecondaryButton}"/>
                        </Grid>
                        
                        <!-- Lista szczegółowych wymagań -->
                        <CollectionView ItemsSource="{Binding DetailedRequirements}"
                                       SelectionMode="None">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Brak danych dla wybranej kategorii"
                                           Style="{StaticResource SubHeaderLabel}"/>
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="5">
                                            <!-- Nagłówek z nazwą i postępem -->
                                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0" 
                                                      Text="{Binding Name}" 
                                                      Style="{StaticResource SubHeaderLabel}"/>
                                                <Label Grid.Column="1" 
                                                      Text="{Binding ProgressText}" 
                                                      Style="{StaticResource ValueLabel}"/>
                                            </Grid>
                                            
                                            <!-- Pasek postępu -->
                                            <ProgressBar Grid.Row="1" 
                                                        Progress="{Binding Progress}"
                                                        Style="{StaticResource ProgressBar}"/>
                                            
                                            <!-- Szczegóły wymagań -->
                                            <VerticalStackLayout Grid.Row="2" Spacing="5" IsVisible="{Binding HasDetails}">
                                                <Label Text="{Binding Description}" 
                                                      Style="{StaticResource BodyLabel}"
                                                      IsVisible="{Binding Description, Converter={StaticResource StringNotEmptyConverter}}"/>
                                                
                                                <Label Text="{Binding Details}" 
                                                      Style="{StaticResource BodyLabel}"
                                                      IsVisible="{Binding Details, Converter={StaticResource StringNotEmptyConverter}}"/>
                                                
                                                <Label Text="{Binding CompletionRequirements}" 
                                                      Style="{StaticResource BodyLabel}"
                                                      IsVisible="{Binding CompletionRequirements, Converter={StaticResource StringNotEmptyConverter}}"/>
                                            </VerticalStackLayout>
                                            
                                            <!-- Przycisk rozwijania szczegółów -->
                                            <Button Grid.Row="3" 
                                                   Text="{Binding ToggleDetailsText}" 
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SpecializationProgressViewModel}}, Path=ToggleDetailsCommand}"
                                                   CommandParameter="{Binding Id}"
                                                   Style="{StaticResource SecondaryButton}"
                                                   HorizontalOptions="End"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>