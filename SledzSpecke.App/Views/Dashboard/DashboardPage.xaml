<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Dashboard"
             x:Class="SledzSpecke.App.Views.Dashboard.DashboardPage"
             x:DataType="viewmodels:DashboardViewModel"
             Title="{Binding Title}">
    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <Grid RowDefinitions="Auto,*"
                  RowSpacing="20"
                  Padding="20">
                <VerticalStackLayout Grid.Row="0"
                    Spacing="10">
                    <Label Text="Postęp specjalizacji"
                        Style="{StaticResource HeaderLabel}"/>
                    <ProgressBar Progress="0.6"
                        Style="{StaticResource ProgressBar}"/>
                    <Label Text="60% ukończone"
                        Style="{StaticResource BodyLabel}"
                        HorizontalOptions="Center"/>
                    <Button Text="Szczegółowy postęp specjalizacji" 
                        Command="{Binding NavigateToSpecializationProgressCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,10,0,0"/>
                </VerticalStackLayout>
                <Grid Grid.Row="1"
                      RowDefinitions="*,*"
                      ColumnDefinitions="*,*"
                      RowSpacing="20"
                      ColumnSpacing="20">
                    <Border Grid.Row="0" 
                           Grid.Column="0"
                           Style="{StaticResource CardBorder}">
                        <Grid RowDefinitions="Auto,Auto" 
                              RowSpacing="5">
                            <Label Text="Procedury"
                                   Style="{StaticResource SubHeaderLabel}"/>
                            <Label Text="15/30"
                                   Grid.Row="1"
                                   Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="0" 
                           Grid.Column="1"
                           Style="{StaticResource CardBorder}">
                        <Grid RowDefinitions="Auto,Auto" 
                              RowSpacing="5">
                            <Label Text="Dyżury"
                                   Style="{StaticResource SubHeaderLabel}"/>
                            <Label Text="24/50"
                                   Grid.Row="1"
                                   Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" 
                           Grid.Column="0"
                           Style="{StaticResource CardBorder}">
                        <Grid RowDefinitions="Auto,Auto" 
                              RowSpacing="5">
                            <Label Text="Staże"
                                   Style="{StaticResource SubHeaderLabel}"/>
                            <Label Text="2/5"
                                   Grid.Row="1"
                                   Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" 
                           Grid.Column="1"
                           Style="{StaticResource CardBorder}">
                        <Grid RowDefinitions="Auto,Auto" 
                              RowSpacing="5">
                            <Label Text="Kursy"
                                   Style="{StaticResource SubHeaderLabel}"/>
                            <Label Text="3/8"
                                   Grid.Row="1"
                                   Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>