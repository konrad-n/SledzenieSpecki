<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SledzSpecke.App.ViewModels.Statistics"
             x:Class="SledzSpecke.App.Views.Statistics.SpecializationStatsPage"
             x:DataType="viewmodels:SpecializationStatsViewModel"
             Title="Statystyki specjalizacji">

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Podsumowanie -->
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Ogólny postęp specjalizacji" 
                               Style="{StaticResource SubHeaderLabel}"/>
                        <ProgressBar Progress="{Binding OverallProgress}" 
                                     Style="{StaticResource ProgressBar}"/>
                        <Label Text="{Binding ProgressText}"
                               Style="{StaticResource BodyLabel}"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding TimeLeftText}"
                               Style="{StaticResource BodyLabel}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Procedury -->
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Procedury" 
                               Style="{StaticResource SubHeaderLabel}"/>
                        <ProgressBar Progress="{Binding ProceduresProgress}" 
                                     Style="{StaticResource ProgressBar}"/>
                        <Label Text="{Binding ProceduresProgressText}"
                               Style="{StaticResource BodyLabel}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Dyżury -->
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Dyżury" 
                               Style="{StaticResource SubHeaderLabel}"/>
                        <ProgressBar Progress="{Binding DutiesProgress}" 
                                     Style="{StaticResource ProgressBar}"/>
                        <Label Text="{Binding DutiesProgressText}"
                               Style="{StaticResource BodyLabel}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Kursy -->
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Kursy" 
                               Style="{StaticResource SubHeaderLabel}"/>
                        <ProgressBar Progress="{Binding CoursesProgress}" 
                                     Style="{StaticResource ProgressBar}"/>
                        <Label Text="{Binding CoursesProgressText}"
                               Style="{StaticResource BodyLabel}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Staże -->
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Staże" 
                               Style="{StaticResource SubHeaderLabel}"/>
                        <ProgressBar Progress="{Binding InternshipsProgress}" 
                                     Style="{StaticResource ProgressBar}"/>
                        <Label Text="{Binding InternshipsProgressText}"
                               Style="{StaticResource BodyLabel}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Przyciski eksportu -->
                <Button Text="Eksportuj raport" 
                        Command="{Binding ExportReportCommand}"
                        Style="{StaticResource PrimaryButton}"/>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
