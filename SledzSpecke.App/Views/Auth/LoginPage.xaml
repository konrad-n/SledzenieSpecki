<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SledzSpecke.App.Views.Auth.LoginPage"
             Title="Logowanie">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
            <Image Source="app_logo.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center" />

            <Label Text="ŚledzSpecke" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20" TextColor="{StaticResource Primary}" />

            <Label Text="Zaloguj się do aplikacji" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,20" />

            <Entry x:Name="EmailEntry" Placeholder="Adres email" Keyboard="Email" />

            <Entry x:Name="PasswordEntry" Placeholder="Hasło" IsPassword="True" />

            <Button x:Name="LoginButton" Text="Zaloguj się" Clicked="OnLoginClicked" BackgroundColor="{StaticResource Primary}" TextColor="White" Margin="0,20,0,0" />

            <ActivityIndicator x:Name="ActivityIndicator" IsRunning="False" HorizontalOptions="Center" Margin="0,10,0,10" />

            <Label Text="Nie masz jeszcze konta?" HorizontalOptions="Center" Margin="0,20,0,0" />

            <Button Text="Zarejestruj się" Clicked="OnRegisterClicked" BackgroundColor="Transparent" TextColor="{StaticResource Primary}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>