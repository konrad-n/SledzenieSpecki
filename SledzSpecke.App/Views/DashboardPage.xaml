<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="SledzSpecke.Views.DashboardPage"
          Title="Dashboard">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">



            <Frame BorderColor="LightGray" Padding="15" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Specjalizacja: Hematologia" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,10"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                        <Frame BorderColor="LightBlue" Padding="10" Grid.Column="0" Grid.Row="0">
                            <VerticalStackLayout>
                                <Label Text="Data rozpoczęcia" FontSize="14" TextColor="Gray"/>
                                <Label x:Name="StartDateLabel" Text="01-01-2023" FontSize="16" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame BorderColor="LightBlue" Padding="10" Grid.Column="1" Grid.Row="0">
                            <VerticalStackLayout>
                                <Label Text="Przewidywana data zakończenia" FontSize="14" TextColor="Gray"/>
                                <Label x:Name="EndDateLabel" Text="01-01-2028" FontSize="16" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame BorderColor="LightBlue" Padding="10" Grid.Column="0" Grid.Row="1">
                            <VerticalStackLayout>
                                <Label Text="Pozostało dni" FontSize="14" TextColor="Gray"/>
                                <Label x:Name="DaysLeftLabel" Text="1825" FontSize="16" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame BorderColor="LightBlue" Padding="10" Grid.Column="1" Grid.Row="1">
                            <VerticalStackLayout>
                                <Label Text="Obecny etap" FontSize="14" TextColor="Gray"/>
                                <Label x:Name="CurrentStageLabel" Text="Moduł podstawowy" FontSize="16" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Postęp całościowy" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Frame BorderColor="LightGray" Padding="15" CornerRadius="10">
                <VerticalStackLayout>
                    <ProgressBar x:Name="TotalProgressBar" Progress="0.35" HeightRequest="15" Margin="0,0,0,5"/>
                    <Label x:Name="TotalProgressLabel" Text="35% ukończono" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Postęp modułów" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                <Frame BorderColor="LightGray" Padding="10" Grid.Column="0" Grid.Row="0">
                    <VerticalStackLayout>
                        <Label Text="Moduł podstawowy" FontSize="14" FontAttributes="Bold"/>
                        <ProgressBar x:Name="BasicModuleProgressBar" Progress="0.6" HeightRequest="10" Margin="0,5,0,5"/>
                        <Label x:Name="BasicModuleProgressLabel" Text="60%" HorizontalOptions="Center" FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BorderColor="LightGray" Padding="10" Grid.Column="1" Grid.Row="0">
                    <VerticalStackLayout>
                        <Label Text="Moduł specjalistyczny" FontSize="14" FontAttributes="Bold"/>
                        <ProgressBar x:Name="SpecialisticModuleProgressBar" Progress="0.1" HeightRequest="10" Margin="0,5,0,5"/>
                        <Label x:Name="SpecialisticModuleProgressLabel" Text="10%" HorizontalOptions="Center" FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Label Text="Kategorie" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                <Frame BorderColor="LightGray" Padding="10" Grid.Column="0" Grid.Row="0" BackgroundColor="AliceBlue">
                    <VerticalStackLayout>
                        <Label Text="Kursy" FontSize="16" FontAttributes="Bold"/>
                        <Label x:Name="CoursesLabel" Text="5/21 ukończonych" FontSize="14"/>
                        <Button Text="Przejdź" Clicked="OnCoursesButtonClicked" HeightRequest="30" FontSize="12" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BorderColor="LightGray" Padding="10" Grid.Column="1" Grid.Row="0" BackgroundColor="AliceBlue">
                    <VerticalStackLayout>
                        <Label Text="Staże" FontSize="16" FontAttributes="Bold"/>
                        <Label x:Name="InternshipsLabel" Text="2/10 ukończonych" FontSize="14"/>
                        <Button Text="Przejdź" Clicked="OnInternshipsButtonClicked" HeightRequest="30" FontSize="12" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BorderColor="LightGray" Padding="10" Grid.Column="0" Grid.Row="1" BackgroundColor="AliceBlue">
                    <VerticalStackLayout>
                        <Label Text="Procedury A" FontSize="16" FontAttributes="Bold"/>
                        <Label x:Name="ProceduresALabel" Text="45/107 wykonanych" FontSize="14"/>
                        <Button Text="Przejdź" Clicked="OnProceduresButtonClicked" HeightRequest="30" FontSize="12" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BorderColor="LightGray" Padding="10" Grid.Column="1" Grid.Row="1" BackgroundColor="AliceBlue">
                    <VerticalStackLayout>
                        <Label Text="Procedury B" FontSize="16" FontAttributes="Bold"/>
                        <Label x:Name="ProceduresBLabel" Text="25/96 wykonanych" FontSize="14"/>
                        <Button Text="Przejdź" Clicked="OnProceduresButtonClicked" HeightRequest="30" FontSize="12" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BorderColor="LightGray" Padding="10" Grid.Column="0" Grid.Row="2" BackgroundColor="AliceBlue">
                    <VerticalStackLayout>
                        <Label Text="Dyżury" FontSize="16" FontAttributes="Bold"/>
                        <Label x:Name="DutyShiftsLabel" Text="125/520 godzin" FontSize="14"/>
                        <Button Text="Przejdź" Clicked="OnDutyShiftsButtonClicked" HeightRequest="30" FontSize="12" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BorderColor="LightGray" Padding="10" Grid.Column="1" Grid.Row="2" BackgroundColor="AliceBlue">
                    <VerticalStackLayout>
                        <Label Text="Samokształcenie" FontSize="16" FontAttributes="Bold"/>
                        <Label x:Name="SelfEducationLabel" Text="5/18 dni" FontSize="14"/>
                        <Button Text="Przejdź" Clicked="OnSelfEducationButtonClicked" HeightRequest="30" FontSize="12" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Label Text="Najbliższe terminy" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Frame BorderColor="LightGray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="UpcomingEvent1" Text="15.03.2023 - Kurs: Zaburzenia hemostazy" TextColor="DarkBlue"/>
                    <Label x:Name="UpcomingEvent2" Text="01.04.2023 - Staż kierunkowy w laboratorium hematologicznym" TextColor="DarkBlue"/>
                    <Label x:Name="UpcomingEvent3" Text="30.05.2023 - Koniec modułu podstawowego" TextColor="Red" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                <Button Text="Generuj raport do SMK" Clicked="OnGenerateReportButtonClicked" BackgroundColor="DarkBlue" TextColor="White"/>
                <Button Text="Ustawienia" Clicked="OnSettingsButtonClicked" BackgroundColor="Gray" TextColor="White"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>