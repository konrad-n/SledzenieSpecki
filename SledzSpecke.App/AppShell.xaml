<?xml version="1.0" encoding="UTF-8" ?>
<Shell
 x:Class="SledzSpecke.AppShell"
 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 xmlns:local="clr-namespace:SledzSpecke"
 xmlns:views="clr-namespace:SledzSpecke.App.Views"
 Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
        Title="Dashboard"
        Icon="dashboard.png"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />

        <ShellContent
        Title="Kursy"
        Icon="course.png"
        ContentTemplate="{DataTemplate views:CoursesPage}"
        Route="CoursesPage" />

        <ShellContent
        Title="Staże"
        Icon="internship.png"
        ContentTemplate="{DataTemplate views:InternshipsPage}"
        Route="InternshipsPage" />

        <ShellContent
        Title="Procedury"
        Icon="procedure.png"
        ContentTemplate="{DataTemplate views:ProceduresPage}"
        Route="ProceduresPage" />

        <ShellContent
        Title="Dyżury"
        Icon="duty.png"
        ContentTemplate="{DataTemplate views:DutyShiftsPage}"
        Route="DutyShiftsPage" />
    </TabBar>
</Shell>