<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SledzSpecke.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SledzSpecke.App"
    xmlns:dashboard="clr-namespace:SledzSpecke.App.Views.Dashboard"
    xmlns:procedures="clr-namespace:SledzSpecke.App.Views.Procedures"
    xmlns:duties="clr-namespace:SledzSpecke.App.Views.Duties"
    xmlns:profile="clr-namespace:SledzSpecke.App.Views.Profile"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Panel główny" Icon="dashboard.png">
            <ShellContent 
                ContentTemplate="{DataTemplate dashboard:DashboardPage}"
                Route="Dashboard" />
        </Tab>
        <Tab Title="Procedury" Icon="procedure.png">
            <ShellContent 
                ContentTemplate="{DataTemplate procedures:ProceduresPage}"
                Route="Procedures" />
        </Tab>
        <Tab Title="Dyżury" Icon="duty.png">
            <ShellContent 
                ContentTemplate="{DataTemplate duties:DutiesPage}"
                Route="Duties" />
        </Tab>
        <Tab Title="Profil" Icon="profile.png">
            <ShellContent 
                ContentTemplate="{DataTemplate profile:ProfilePage}"
                Route="Profile" />
        </Tab>
    </TabBar>
</Shell>