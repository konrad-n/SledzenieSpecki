<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SledzSpecke.App"
             xmlns:converters="clr-namespace:SledzSpecke.App.Converters"
             x:Class="SledzSpecke.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Rozmiary czcionek -->
            <x:Double x:Key="FontSizeSmall">12</x:Double>
            <x:Double x:Key="FontSizeNormal">14</x:Double>
            <x:Double x:Key="FontSizeMedium">16</x:Double>
            <x:Double x:Key="FontSizeLarge">20</x:Double>

            <!-- Style dla tekstu -->
            <Style x:Key="BodyLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"/>
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeNormal}"/>
            </Style>

            <Style x:Key="ValueLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"/>
                <Setter Property="FontSize"
                        Value="24"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
            </Style>

            <Style x:Key="HeaderLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"/>
                <Setter Property="FontSize"
                        Value="24"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="Margin"
                        Value="0,0,0,10"/>
            </Style>

            <Style x:Key="SubHeaderLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray200}}"/>
                <Setter Property="FontSize"
                        Value="18"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
            </Style>

            <!-- Style dla przycisków -->
            <Style x:Key="PrimaryButton"
                   TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="{StaticResource Primary}"/>
                <Setter Property="TextColor"
                        Value="White"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="Padding"
                        Value="24,12"/>
                <Setter Property="CornerRadius"
                        Value="8"/>
            </Style>

            <Style x:Key="SecondaryButton"
                   TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}"/>
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="Padding"
                        Value="24,12"/>
                <Setter Property="CornerRadius"
                        Value="8"/>
            </Style>

            <!-- Dodatkowy styl dla przycisków niebezpiecznych akcji -->
            <Style x:Key="DangerButton"
                  TargetType="Button"
                  BasedOn="{StaticResource SecondaryButton}">
                <Setter Property="BackgroundColor"
                        Value="#E53935"/>
                <Setter Property="TextColor"
                        Value="White"/>
            </Style>

            <!-- Styl dla kafelków -->
            <Style x:Key="CardBorder"
                   TargetType="Border">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light=White, Dark={StaticResource Gray800}}"/>
                <Setter Property="Stroke"
                        Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}"/>
                <Setter Property="StrokeThickness"
                        Value="1"/>
                <Setter Property="StrokeShape"
                        Value="RoundRectangle 10,10,10,10"/>
                <Setter Property="Padding"
                        Value="15"/>
                <Setter Property="Shadow">
                    <Shadow Brush="{AppThemeBinding Light=Black, Dark=White}"
                            Offset="0,2"
                            Radius="2"
                            Opacity="0.1"/>
                </Setter>
            </Style>

            <!-- Style dla progress bara -->
            <Style x:Key="ProgressBar"
                   TargetType="ProgressBar">
                <Setter Property="ProgressColor"
                        Value="{StaticResource Primary}"/>
                <Setter Property="HeightRequest"
                        Value="8"/>
                <Setter Property="MinimumHeightRequest"
                        Value="8"/>
            </Style>

            <!-- Style dla CollectionView -->
            <Style x:Key="ListCollectionView"
                   TargetType="CollectionView">
                <Setter Property="SelectionMode"
                        Value="None"/>
                <Setter Property="ItemsLayout">
                    <Setter.Value>
                        <LinearItemsLayout Orientation="Vertical"
                                           ItemSpacing="10"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style dla pól formularzy -->
            <Style x:Key="BorderedEntry" TargetType="InputView">
                <Setter Property="BackgroundColor" 
                        Value="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"/>
                <Setter Property="TextColor" 
                        Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"/>
                <Setter Property="Margin" 
                        Value="0,5,0,0"/>
            </Style>

            <!-- Zmienne kolorów -->
            <Color x:Key="Danger">#E53935</Color>

            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>