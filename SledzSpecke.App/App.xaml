<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SledzSpecke.App"
             x:Class="SledzSpecke.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Istniejące kolory -->
            <Color x:Key="Primary">#2196F3</Color>
            <Color x:Key="Secondary">#FFC107</Color>
            <Color x:Key="TextPrimary">#212121</Color>
            <Color x:Key="TextSecondary">#757575</Color>
            <Color x:Key="Surface">#F5F5F5</Color>

            <!-- Style dla tekstu -->
            <Style x:Key="BodyLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeNormal}"/>
            </Style>

            <Style x:Key="ValueLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{StaticResource TextPrimary}"/>
                <Setter Property="FontSize"
                        Value="24"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
            </Style>

            <Style x:Key="HeaderLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{StaticResource TextPrimary}"/>
                <Setter Property="FontSize"
                        Value="24"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="Margin"
                        Value="0,0,0,10"/>
            </Style>

            <Style x:Key="SubHeaderLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{StaticResource TextPrimary}"/>
                <Setter Property="FontSize"
                        Value="18"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
            </Style>

            <!-- Style dla przycisków -->
            <Style x:Key="PrimaryButton"
                   TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="{StaticResource Primary}"/>
                <Setter Property="TextColor"
                        Value="White"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="Padding"
                        Value="24,12"/>
                <Setter Property="CornerRadius"
                        Value="8"/>
            </Style>

            <Style x:Key="SecondaryButton"
                   TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="{StaticResource Secondary}"/>
                <Setter Property="TextColor"
                        Value="{StaticResource TextPrimary}"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="Padding"
                        Value="24,12"/>
                <Setter Property="CornerRadius"
                        Value="8"/>
            </Style>

            <!-- Styl dla kafelków -->
            <Style x:Key="CardBorder"
                   TargetType="Border">
                <Setter Property="BackgroundColor"
                        Value="White"/>
                <Setter Property="Stroke"
                        Value="{StaticResource Gray300}"/>
                <Setter Property="StrokeThickness"
                        Value="1"/>
                <Setter Property="StrokeShape"
                        Value="RoundRectangle 10,10,10,10"/>
                <Setter Property="Padding"
                        Value="15"/>
                <Setter Property="Shadow">
                    <Shadow Brush="Black"
                            Offset="0,2"
                            Radius="2"
                            Opacity="0.1"/>
                </Setter>
            </Style>

            <!-- Style dla progress bara -->
            <Style x:Key="ProgressBar"
                   TargetType="ProgressBar">
                <Setter Property="ProgressColor"
                        Value="{StaticResource Primary}"/>
                <Setter Property="HeightRequest"
                        Value="8"/>
                <Setter Property="MinimumHeightRequest"
                        Value="8"/>
            </Style>

            <!-- Style dla CollectionView -->
            <Style x:Key="ListCollectionView"
                   TargetType="CollectionView">
                <Setter Property="SelectionMode"
                        Value="None"/>
                <Setter Property="ItemsLayout">
                    <Setter.Value>
                        <LinearItemsLayout Orientation="Vertical"
                                           ItemSpacing="10"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
