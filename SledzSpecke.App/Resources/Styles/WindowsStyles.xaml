<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls">

    <!-- Windows-specific style adjustments based on Fluent Design System -->
    
    <!-- Typography based on Segoe UI -->
    <OnPlatform x:Key="WindowsFontFamily" x:TypeArguments="x:String">
        <On Platform="Windows" Value="Segoe UI" />
    </OnPlatform>
    
    <!-- Text sizes following Windows design guidelines -->
    <x:Double x:Key="WindowsCaptionFontSize">12</x:Double>
    <x:Double x:Key="WindowsBodyFontSize">14</x:Double>
    <x:Double x:Key="WindowsSubtitleFontSize">16</x:Double>
    <x:Double x:Key="WindowsTitleFontSize">20</x:Double>
    <x:Double x:Key="WindowsLargeTitleFontSize">24</x:Double>
    <x:Double x:Key="WindowsDisplayFontSize">28</x:Double>
    
    <!-- Acryllic effect brushes (semitransparent) -->
    <Color x:Key="WindowsAcrylicBackground">#E6F7F7F7</Color>
    <Color x:Key="WindowsAcrylicBackgroundDark">#E6202020</Color>
    
    <!-- Reveal highlight effect colors -->
    <Color x:Key="WindowsRevealBorderLight">#FFFFFFFF</Color>
    <Color x:Key="WindowsRevealBorderDark">#FF2B2B2B</Color>
    <Color x:Key="WindowsRevealHoverLight">#FFE6E6E6</Color>
    <Color x:Key="WindowsRevealHoverDark">#FF2D2D2D</Color>
    
    <!-- Windows Mica material (when supported) -->
    <Color x:Key="WindowsMicaBackground">#FFF3F3F3</Color>
    <Color x:Key="WindowsMicaBackgroundDark">#FF202020</Color>
    
    <!-- Page background based on app mode -->
    <Color x:Key="WindowsPageBackground">#FFF9F9F9</Color>
    <Color x:Key="WindowsPageBackgroundDark">#FF1F1F1F</Color>
    
    <!-- Windows 11 rounded corners -->
    <x:Double x:Key="WindowsControlCornerRadius">4</x:Double>
    <x:Double x:Key="WindowsCardCornerRadius">8</x:Double>
    
    <!-- Control styles -->
    <Style x:Key="WindowsButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource WindowsFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource WindowsBodyFontSize}" />
        <Setter Property="CornerRadius" Value="{StaticResource WindowsControlCornerRadius}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="MinimumHeightRequest" Value="32" />
    </Style>
    
    <Style x:Key="WindowsPrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowsButtonStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#0078D4, Dark=#60CDFF}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=White, Dark=Black}" />
    </Style>
    
    <Style x:Key="WindowsSecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowsButtonStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#E6E6E6, Dark=#2C2C2C}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#202020, Dark=#E4E4E4}" />
    </Style>
    
    <Style x:Key="WindowsAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowsButtonStyle}">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#0078D4, Dark=#60CDFF}" />
    </Style>
    
    <!-- Windows Card style with shadow and rounded corners -->
    <Style x:Key="WindowsCardStyle" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#2C2C2C}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light=#E6E6E6, Dark=#3F3F3F}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="Shadow">
            <Shadow Brush="#22000000" Offset="0,2" Radius="5" />
        </Setter>
    </Style>
    
    <!-- TextBox style -->
    <Style x:Key="WindowsTextBoxStyle" TargetType="Entry">
        <Setter Property="FontFamily" Value="{StaticResource WindowsFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource WindowsBodyFontSize}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#2C2C2C}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=#6D6D6D, Dark=#A0A0A0}" />
        <Setter Property="MinimumHeightRequest" Value="32" />
    </Style>
    
    <!-- ComboBox style -->
    <Style x:Key="WindowsComboBoxStyle" TargetType="Picker">
        <Setter Property="FontFamily" Value="{StaticResource WindowsFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource WindowsBodyFontSize}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#2C2C2C}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="MinimumHeightRequest" Value="32" />
    </Style>
    
    <!-- CheckBox style -->
    <Style x:Key="WindowsCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Color" Value="{AppThemeBinding Light=#0078D4, Dark=#60CDFF}" />
        <Setter Property="MinimumHeightRequest" Value="32" />
        <Setter Property="MinimumWidthRequest" Value="32" />
    </Style>
    
    <!-- ToggleSwitch style -->
    <Style x:Key="WindowsToggleSwitchStyle" TargetType="Switch">
        <Setter Property="OnColor" Value="{AppThemeBinding Light=#0078D4, Dark=#60CDFF}" />
        <Setter Property="ThumbColor" Value="{AppThemeBinding Light=White, Dark=White}" />
    </Style>
    
    <!-- Windows ListView style with selection effect -->
    <Style x:Key="WindowsListViewStyle" TargetType="ListView">
        <Setter Property="SelectionMode" Value="Single" />
        <Setter Property="SeparatorColor" Value="{AppThemeBinding Light=#E6E6E6, Dark=#3F3F3F}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>
    
    <!-- ListView item style -->
    <Style x:Key="WindowsListViewItemStyle" TargetType="ViewCell">
        <Setter Property="windows:ViewCell.ContextFlyout" Value="True" />
    </Style>
    
    <!-- Header Text style -->
    <Style x:Key="WindowsHeaderTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource WindowsFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource WindowsTitleFontSize}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    
    <!-- Subheader Text style -->
    <Style x:Key="WindowsSubheaderTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource WindowsFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource WindowsSubtitleFontSize}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="Margin" Value="0,0,0,6" />
    </Style>
    
    <!-- Body Text style -->
    <Style x:Key="WindowsBodyTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource WindowsFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource WindowsBodyFontSize}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#323232, Dark=#E1E1E1}" />
    </Style>
    
    <!-- Caption Text style -->
    <Style x:Key="WindowsCaptionTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource WindowsFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource WindowsCaptionFontSize}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#707070, Dark=#A0A0A0}" />
    </Style>
    
    <!-- Windows ContentPage style -->
    <Style x:Key="WindowsPageStyle" TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource WindowsPageBackground}, Dark={StaticResource WindowsPageBackgroundDark}}" />
    </Style>
</ResourceDictionary>
