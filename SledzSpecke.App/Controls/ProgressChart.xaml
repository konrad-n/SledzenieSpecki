<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SledzSpecke.App.Controls.ProgressChart">
    <Grid>
        <Frame BackgroundColor="Transparent" 
               BorderColor="{StaticResource Gray300}" 
               Padding="10" CornerRadius="10">
            <Grid RowDefinitions="Auto,*" RowSpacing="10">
                <Label Text="{Binding Title}" Style="{StaticResource SubHeaderLabel}" HorizontalOptions="Center"/>
                <Grid Grid.Row="1" RowDefinitions="*,Auto" ColumnDefinitions="Auto,*">
                    <!-- Y Axis Labels -->
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" 
                                        VerticalOptions="Fill" 
                                        HorizontalOptions="End"
                                        Spacing="0">
                        <Label Text="100%" VerticalOptions="Start"/>
                        <Label Text="75%" VerticalOptions="Center"/>
                        <Label Text="50%" VerticalOptions="Center"/>
                        <Label Text="25%" VerticalOptions="Center"/>
                        <Label Text="0%" VerticalOptions="End"/>
                    </VerticalStackLayout>
                    
                    <!-- Chart Area -->
                    <Grid Grid.Row="0" Grid.Column="1" BackgroundColor="Transparent">
                        <!-- Grid lines -->
                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}" VerticalOptions="Start"/>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}" VerticalOptions="Center" Margin="0,-75,0,0"/>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}" VerticalOptions="Center"/>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}" VerticalOptions="Center" Margin="0,75,0,0"/>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}" VerticalOptions="End"/>
                        
                        <!-- Chart data would be added programmatically -->
                    </Grid>
                    
                    <!-- X Axis Labels -->
                    <HorizontalStackLayout Grid.Row="1" Grid.Column="1" 
                                          HorizontalOptions="Fill" 
                                          Spacing="0">
                        <!-- X labels would be added programmatically -->
                    </HorizontalStackLayout>
                </Grid>
            </Grid>
        </Frame>
    </Grid>
</ContentView>
