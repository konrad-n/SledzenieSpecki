<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="SledzSpecke.App.Features.Duties.Views.DutyShiftsPage"
          Title="Dyżury">
    <Grid RowDefinitions="Auto,*">
        <VerticalStackLayout Padding="15" Spacing="10">
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Start">
                <Label Text="Suma godzin dyżurów:" VerticalOptions="Center" FontSize="16"/>
                <Label x:Name="TotalHoursLabel" Text="0/0 godzin" VerticalOptions="Center" FontSize="16" FontAttributes="Bold"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Start">
                <Label Text="Tygodniowo:" VerticalOptions="Center" FontSize="14"/>
                <Label x:Name="WeeklyHoursLabel" Text="0h" VerticalOptions="Center" FontSize="14" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15" Spacing="10" x:Name="DutyShiftsLayout">
                <!-- Tutaj będą dynamicznie dodawane elementy dyżurów -->
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Dodaj" Clicked="OnAddDutyShiftClicked" IconImageSource="add_icon.png" />
    </ContentPage.ToolbarItems>
</ContentPage>